{
  "apps" : [{
    "name"        : "koa-sample",
    "script"      : "./app/server.js",
    "args"        : [],
    "watch"       : true,
    "autorestart"   : true,
    "node_args"   : "",
    "merge_logs"  : false,
    "cwd"         : "./",
    "env": {
      "NODE_ENV": "development",
      "PORT": "3000",
      "MONGO_HOST": "localhost",
